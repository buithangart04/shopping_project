        <servlet-name>ChangeProduct</servlet-name>
        <url-pattern>/changeproduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProduct</servlet-name>
        <url-pattern>/add</url-pattern>
